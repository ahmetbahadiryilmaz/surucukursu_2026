{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["pnpm-lock.yaml"],
  "globalEnv": ["NODE_ENV", "PORT"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "package.json", "tsconfig.json", "vite.config.ts", "tsconfig.node.json", "prisma/**"],
      "outputs": ["dist/**", "build/**"],
      "env": ["NODE_ENV", "PORT"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "php-worker": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {},
    "start:dev": {
      "cache": false,
      "persistent": true
    }
  }
}