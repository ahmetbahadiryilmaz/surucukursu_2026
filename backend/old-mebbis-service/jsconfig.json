{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@src": ["./src"],
      "@src/*": ["./src/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@errors": ["./src/errors"],
      "@errors/*": ["./src/errors/*"],
      "@helpers": ["./src/helpers"],
      "@helpers/*": ["./src/helpers/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@middleware": ["./src/middleware"],
      "@middleware/*": ["./src/middleware/*"],
      "@routers": ["./src/routers"],
      "@routers/*": ["./src/routers/*"],
      "@settings": ["./src/settings"],
      "@settings/*": ["./src/settings/*"]
    }
  }
}
