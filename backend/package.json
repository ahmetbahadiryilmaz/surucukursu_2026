{
  "name": "surucukursu-backend",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm -r --filter ./shared --filter ./services/* --filter ./workers/* build",
    "build:shared": "pnpm --filter @surucukursu/shared build",
    "build:api-gateway": "pnpm --filter @surucukursu/api-gateway build",
    "build:api-server": "pnpm --filter driving-school-api build",
    "build:database-service": "pnpm --filter @surucukursu/database-service build",
    "build:pdf-worker": "pnpm --filter @surucukursu/pdf-worker build",
    "dev:api-gateway": "pnpm --filter @surucukursu/api-gateway dev",
    "dev:api-server": "pnpm --filter driving-school-api dev",
    "dev:database-service": "pnpm --filter @surucukursu/database-service dev",
    "dev:pdf-worker": "pnpm --filter @surucukursu/pdf-worker dev"
  }
}
