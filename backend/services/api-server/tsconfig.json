{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2017",
      "sourceMap": true,
      "outDir": "../../dist/api-server",
      "baseUrl": "./",
      "incremental": true,
      "skipLibCheck": true,
      "paths": {
        "/src/*": ["src/*"],
        "@surucukursu/shared": ["../../shared/src"],
        "@surucukursu/shared/*": ["../../shared/src/*"]    
      }
    }
  }