{
  "name": "@surucukursu/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Surucukursu microservices",
  "private": true,
  "scripts": {
    "prebuild": "npx rimraf ../../dist/api-gateway",
    "build": "npx nest build",
    "dev": "npx nest start --watch",
    "start": "npx nest start",
    "start:dev": "npx nest start --watch",
    "start:debug": "npx nest start --debug --watch",
    "start:prod": "node ../../dist/api-gateway/main",
    "lint": "npx eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "npx jest"
  },
  "dependencies": {
    "@surucukursu/shared": "workspace:*",
