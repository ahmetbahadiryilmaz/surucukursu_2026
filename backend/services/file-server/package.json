{
  "name": "@surucukursu/file-server",
  "version": "1.0.0",
  "description": "File Server for Surucukursu - handles file storage and downloads",
  "private": true,
  "scripts": {
    "prebuild": "npx rimraf ../../dist/file-server",
    "build": "npx nest build",
    "dev": "npx nest start --watch",
    "start": "npx nest start",
    "start:dev": "npx nest start --watch",
    "start:debug": "npx nest start --debug --watch",
    "start:prod": "node ../../dist/file-server/main",
    "lint": "npx eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "npx jest"
  },
  "dependencies": {
    "@fastify/static": "^6.10.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@surucukursu/shared": "workspace:*",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "mime-types": "^2.1.35",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
