{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "services",
  "compilerOptions": {
    "webpack": false,
    "deleteOutDir": true
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "services/api-gateway",
      "entryFile": "main",
      "sourceRoot": "services/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "services/api-gateway/tsconfig.json"
      }
    },
    "api-server": {
      "type": "application",
      "root": "services/api-server",
      "entryFile": "main",
      "sourceRoot": "services/api-server/src",
      "compilerOptions": {
        "tsConfigPath": "services/api-server/tsconfig.json"
      }
    },
    "database-service": {
      "type": "application",
      "root": "services/database-service",
      "entryFile": "index",
      "sourceRoot": "services/database-service",
      "compilerOptions": {
        "tsConfigPath": "services/database-service/tsconfig.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "shared",
      "entryFile": "index",
      "sourceRoot": "shared/src",
      "compilerOptions": {
        "tsConfigPath": "shared/tsconfig.json"
      }
    }
  }
}
