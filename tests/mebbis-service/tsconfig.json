{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "/src/*": ["../backend/services/mebbis-service/src/*"],
      "@surucukursu/shared": ["../backend/shared/src"],
      "@surucukursu/shared/*": ["../backend/shared/src/*"]
    }
  }
}