generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  sessions  Session[]

  @@map("users")
}

model Session {
  id            Int      @id @default(autoincrement())
  token         String   @unique
  user_id       Int
  created_at    DateTime @default(now())
  expires_at    DateTime
  last_activity DateTime @default(now())
  ip_address    String?
  user_agent    String?
  user          User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expires_at])
  @@index([user_id])
  @@map("sessions")
}
